	<div tabindex="-1" class="modal fade bd-example-modal-lg" id="exampleModalCenter" role="dialog" aria-hidden="true" aria-labelledby="exampleModalCenterTitle">
		@using (Html.BeginForm("AddFamilyMember", "Account", FormMethod.Post, new { id = "AddMemberForm", returnUrl = this.Request.RawUrl }))
		{
			@Html.AntiForgeryToken()
			<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
				<div class="modal-content">
					<div class="modal-body">
						<h5 class="modal-title">Add Family Member</h5>

						@Html.ValidationSummary(true)

						<div class="row">
							<div class="col-md-6">
								@*<label>First Name <span class="red-txt">*</span></label>
									<input class="form-control" type="password" placeholder="">*@
								@Html.LabelFor(m => m.FirstName, new { @class = "requiredA" })
								@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
								@Html.ValidationMessageFor(m => m.FirstName)
							</div>
							<div class="col-md-6">
								@*<label>Last Name <span class="red-txt">*</span></label>
									<input class="form-control" type="password" placeholder="">*@
								@Html.LabelFor(m => m.LastName, new { @class = "requiredA" })
								@Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
								@Html.ValidationMessageFor(m => m.LastName)
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								@*<label>Date of Birth <span class="red-txt">*</span></label>
									<input class="form-control" type="password" placeholder="">*@
								@Html.LabelFor(m => m.DOB, new { @class = "requiredA" })
								@Html.TextBoxFor(m => m.DOB, "{0:MMM d, yyyy}", new { @class = "form-control", @type = "date" })
								@Html.ValidationMessageFor(m => m.DOB)
							</div>
							<div class="col-md-6">
								@*<label>Relationship <span class="red-txt">*</span></label>
									<select class="form-control">
										<option>Male</option>
										<option>Female</option>
									</select>*@
								@Html.LabelFor(m => m.RelationshipData, new { @class = "requiredA" })
								@Html.DropDownList("RelationshipData", new SelectList(ViewBag.Relationship, "Id", "Name"), "Select", new { @class = "form-control" })
								@Html.ValidationMessageFor(m => m.RelationshipData)
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<label>
									Grade
									<img src="~/Content/img/info-icon.png" alt="" title="Grade in school (fall of current year)" />
									@*<img rel="tooltip" title="" alt="" src="~/Content/img/info-icon.png" data-original-title="Grade in school (fall of current year)" data-toggle="tooltip" data-placement="right" />*@
									@*<img title="" alt="" src="~/Content/img/info-icon.png" data-original-title="Grade in school (fall of current year)" data-toggle="tooltip" data-placement="right">*@
								</label>
								@*<select class="form-control">
										<option>Male</option>
										<option>Female</option>
									</select>*@
								@*@Html.LabelFor(m => m.Grade)< img title = "" alt = "" src = "~/Content/img/info-icon.png" data - original - title = "Grade in school (fall of current year)" data - toggle = "tooltip" data - placement = "right" >*@
								@Html.DropDownList("Grade", new SelectList(ViewBag.Grade, "Id", "Name"), "Select", new { @class = "form-control" })
								@Html.ValidationMessageFor(m => m.Grade)
							</div>
							<div class="col-md-6">
								@*<label>Gender</label>
									<select class="form-control">
										<option>Male</option>
										<option>Female</option>
									</select>*@
								@Html.LabelFor(m => m.GenderData)
								@Html.DropDownList("GenderData", new SelectList(ViewBag.Gender, "Id", "Name"), "Select", new { @class = "form-control" })
								@Html.ValidationMessageFor(m => m.GenderData)
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								@*<label>Cell Phone</label>
									<input class="form-control" type="password" placeholder="">*@
								@Html.LabelFor(m => m.CellPhone)
								@Html.TextBoxFor(m => m.CellPhone, new { @class = "form-control" })
								@Html.ValidationMessageFor(m => m.CellPhone)
							</div>
							<div class="col-md-6">
								@*<label>Email Address</label>
									<input class="form-control" type="password" placeholder="">*@
								@Html.LabelFor(m => m.Email)
								@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
								@Html.ValidationMessageFor(m => m.Email)
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<button class="btn btn-secondary float-left mr-3" id="#btnCancel " type="submit" data-dismiss="modal" name="prevBtn">Cancel <i class="material-icons">cancel</i></button>
								<button class="btn btn-orange" id="btnsubmit" type="submit" data-target="#demo" data-toggle="collapse" name="nextBtn">Submit <i class="material-icons">check_circle</i></button>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
